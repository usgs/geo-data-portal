<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>gdp-webapp</display-name>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <description>
        Runs application initialization tasks at beginning of app and at end of app</description>
        <display-name>AppInitializationServlet</display-name>
        <servlet-name>AppInitializationServlet</servlet-name>
        <servlet-class>
            gov.usgs.cida.gdp.webapp.servlet.AppInitializationServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
</web-app>
